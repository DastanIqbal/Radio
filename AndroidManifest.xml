<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.cpdev"
          android:versionCode="1"
          android:versionName="1.0">
    <application android:name=".RadioApplication" android:label="Radio" android:icon="@drawable/ic_launcher"
                 android:debuggable="true">
        <activity android:name="RadioActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".PlayerService">
            <intent-filter>
                <action android:name="com.cpdev.PlayerService"/>
            </intent-filter>
        </service>
        <service android:name=".RecorderService">
            <intent-filter>
                <action android:name="com.cpdev.RecorderService"/>
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest> 
