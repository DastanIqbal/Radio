<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_main"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton android:id="@+id/btn_go"
                 android:layout_alignParentRight="true" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:background="@drawable/ic_btn_play"
                 android:scaleType="fitXY" android:onClick="goClick"
                 android:layout_marginLeft="3dip"/>

    <EditText android:id="@+id/txt_url" android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:text="Enter a stream/playlist url..."
              android:textSize="15sp" android:singleLine="true"
              android:layout_alignParentTop="true" android:layout_toLeftOf="@id/btn_go"/>

    <ListView android:id="@+id/lst_favourites"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:layout_below="@+id/txt_url" android:layout_above="@+id/progressLayout" android:layout_weight="1"/>

    <LinearLayout android:id="@+id/progress_layout"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_above="@+id/main_stop_button_layout" android:visibility="gone">
        <TextView android:id="@+id/time_elapsed" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="0.00" android:padding="6dip"/>
        <SeekBar android:id="@+id/seek_progress" android:layout_width="fill_parent"
                 android:layout_height="wrap_content" android:layout_toRightOf="@+id/time_elapsed"
                 android:layout_weight="1" android:padding="2px"/>
        <TextView android:id="@+id/time_remaining" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:layout_toRightOf="@+id/seek_progress"
                  android:text="10.10"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/main_stop_button_layout"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_above="@+id/txt_status" xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@+id/main_stop_playing_btn"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="@string/main_stop_playing_btn" android:layout_weight="0.5"
                android:enabled="false" android:background="@drawable/custom_stop_button"/>

        <Button android:id="@+id/main_stop_recording_btn"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:text="@string/main_stop_recording_btn" android:layout_weight="0.5"
                android:enabled="false" android:background="@drawable/custom_stop_button"/>

    </LinearLayout>
    <TextView android:id="@+id/txt_status" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_above="@id/txt_url"
              android:layout_alignParentBottom="true" android:padding="6dip"/>

</RelativeLayout>
